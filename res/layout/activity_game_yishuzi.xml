<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_head"
        layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_1"
             android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="1"
           android:textSize="@dimen/x250" />

        <TextView
            android:id="@+id/tv_2"
              android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/x250"  />

        <TextView
            android:id="@+id/tv_3"
             android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="3"
           android:textSize="@dimen/x250"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_4"
              android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="4"
            android:textSize="@dimen/x250"  />

        <TextView
            android:id="@+id/tv_5"
              android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/x250"  />

        <TextView
            android:id="@+id/tv_6"
              android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="6"
           android:textSize="@dimen/x250" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="7"
            android:textSize="@dimen/x250" />

        <TextView
            android:id="@+id/tv_8"
           android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="8"
            android:textSize="@dimen/x250" />

        <TextView
            android:id="@+id/tv_9"
            android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:textSize="@dimen/x250"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的成绩:"
            android:textSize="@dimen/x50" />

        <TextView
            android:id="@+id/tv_socer"
             android:layout_width="0dp" 
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="移动了 100 步"
            android:textSize="@dimen/x50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_restart"
            android:textSize="@dimen/x50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="重新开始" />
    </LinearLayout>

</LinearLayout>