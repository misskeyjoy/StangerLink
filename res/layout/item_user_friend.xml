<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <angelbeats.com.view.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_friend_avatar"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x10"
        android:src="@drawable/head_pic"
        app:riv_border_color="@color/linealayout_bottom_color"
        app:riv_border_width="@dimen/x6"
        app:riv_corner_radius="100dip"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Angelbeats.TextView._Black"
        android:layout_alignTop="@+id/img_friend_avatar"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x40"
        android:layout_toRightOf="@+id/img_friend_avatar"
        android:padding="@dimen/x20"
        android:singleLine="true"
        android:text="test"
        android:textSize="@dimen/x50" />

</RelativeLayout>