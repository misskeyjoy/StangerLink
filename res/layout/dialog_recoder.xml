<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/x30" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:src="@drawable/recorder" >

        <ImageView
            android:id="@+id/id_recoder_icon_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/v1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/id_recoder_icon_maike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recorder"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_recoder_dialog_label"
        android:layout_marginTop="@dimen/x10"
        android:layout_height="wrap_content" 
        android:textColor="#ffffff"
        android:text="测试"
        android:layout_width="wrap_content"/>

</LinearLayout>